@model IEnumerable<VacationManagmentApplication.Models.Employee>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="color: #4B164C;">Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary" style="background-color: #4B164C; border-color: #4B164C;">Create New</a>
</p>

<table class="table">
    <thead style="background-color: #F8E7F6;">
        <tr>
            <th style="color: #4B164C;">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th style="color: #4B164C;">
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th style="color: #4B164C;">
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th style="color: #4B164C;">
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody style="background-color: #F8E7F6;">
        @foreach (var item in Model)
        {
            <tr style="background-color: #F8E7F6;">
                <td style="color: #4B164C;">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td style="color: #4B164C;">
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td style="color: #4B164C;">
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td style="color: #4B164C;">
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-link" style="color: #4B164C; text-decoration: none;">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-link" style="color: #4B164C; text-decoration: none;">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-link" style="color: #4B164C; text-decoration: none;">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .table th, .table td {
        color: #4B164C;
    }

    .table {
        background-color: #F8E7F6;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(75, 22, 76, 0.3);
    }

    .btn-link {
        background: none;
        border: none;
        color: #4B164C;
        text-decoration: underline;
    }

        .btn-link:hover {
            color: #DD88CF;
        }

    .btn-primary {
        background-color: #4B164C;
        border-color: #4B164C;
    }

        .btn-primary:hover {
            background-color: #DD88CF;
            border-color: #DD88CF;
        }
</style>
