@model IEnumerable<VacationManagmentApplication.Models.YearlyVacation>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center text-primary-custom">View All Yearly Vacations</h1>

<div class="container mt-4">
    <div class="table-responsive">
        <table class="table table-striped table-hover custom-table">
            <thead class="table-header">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.StartDate)</th>
                    <th>@Html.DisplayNameFor(model => model.EndDate)</th>
                    <th>@Html.DisplayNameFor(model => model.Employee)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.Employee.Name)</td>
                        <td>
                            <a asp-action="Details" asp-controller="Employees" asp-route-id="@item.EmployeeId" class="btn btn-sm btn-custom">Back</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    /* Custom Colors */
    .text-primary-custom {
        color: #4B164C !important; /* Dark Purple */
    }

    /* Style the table */
    .custom-table {
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Soft shadow */
    }

    .table-header {
        background-color: #4B164C; /* Dark Purple */
        color: white;
        text-align: center;
        font-weight: bold;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #F8E7F6; /* Light Pink for alternating rows */
    }

    .table-hover tbody tr:hover {
        background-color: #DD88CF !important; /* Pink on hover */
        color: white;
    }

    /* Buttons */
    .btn-custom {
        background-color: #4B164C; /* Dark Purple */
        color: white;
        border: none;
        transition: all 0.3s ease-in-out;
    }

        .btn-custom:hover {
            background-color: #DD88CF; /* Pink */
            color: white;
        }
</style>
